{
  "name": "aybolit-workspace",
  "private": true,
  "description": "Web Components library built with LitElement",
  "author": "Serhii Kulykov <serguey.kulikov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "argos": "argos upload test/visual/screenshots/chrome --token $ARGOS_TOKEN || true",
    "build": "yarn build-styling",
    "build-styling": "node packages/sass-render/bin/sass-render -s 'packages/*/scss/*.scss'",
    "deploy-storybook": "storybook-to-ghpages",
    "dist": "lerna run dist",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint *.js packages --ignore-path .gitignore",
    "lint:scss": "stylelint packages/**/*.scss",
    "storybook": "start-storybook -p 6006",
    "test": "karma start",
    "test:visual": "rimraf tmp && BABEL_ENV=visual webpack --config test/visual/webpack.config.js && rimraf test/visual/screenshots/chrome/* && vrtest run --config test/visual/vrtest.config.js --record",
    "watch": "node scripts/watcher.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "node-watch": "^0.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-transform-runtime": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/runtime": "^7.4.2",
    "@open-wc/testing-helpers": "^0.7.25",
    "@storybook/addon-knobs": "^5.0.5",
    "@storybook/addons": "^5.0.5",
    "@storybook/core": "^5.0.5",
    "@storybook/polymer": "^5.0.5",
    "@storybook/storybook-deployer": "^2.8.1",
    "@webcomponents/webcomponentsjs": "^2.2.7",
    "argos-cli": "^0.1.1",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-lit": "^0.6.0",
    "husky": "^1.3.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon-chai": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.0-rc.5",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "lit-html": "^1.0.0",
    "mocha": "^6.0.2",
    "npm-run-all": "^4.1.5",
    "polymer-webpack-loader": "^2.0.3",
    "prettier": "^1.16.4",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.0",
    "sinon-chai": "^3.3.0",
    "stylelint": "^9.10.1",
    "stylelint-config-prettier": "^5.0.0",
    "stylelint-config-twbs-bootstrap": "^0.3.0",
    "vrtest": "^0.2.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "stylelint --syntax=scss",
      "prettier --single-quote=false --write",
      "git add"
    ]
  }
}
